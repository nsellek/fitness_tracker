<section class="intro" >

  <div class="intro_item">

    <!-- Over -->
    <div class="over" data-opacity="0.4" data-color="#000"></div>
    <div class="into_back image_bck"  data-image="http://placehold.it/1920x1100/"></div>


    <div class="inside_intro_block">
      <div class="ins_int_item white_txt bordered_wht_border text-center">
        <div class="simple_block simple_block_sml">
          <h4>Login here</h4>
          <%= form_tag sessions_path do %>
            <%= text_field_tag :username, nil, class: 'form-control form-opacity', placeholder: 'Username' %>
            <%= password_field_tag :password, nil, class: 'form-control form-opacity', placeholder: 'Password' %>
            <%= submit_tag :login, class: 'btn btn-white btn-block no-margin' %>
          <% end %>
          <small>Forgot your password? <a href="#">Click Here To Reset</a></small>
        </div>
      </div>
    </div>

  </div>

</section>
