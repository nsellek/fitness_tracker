<section class="intro" >

  <div class="intro_item">

    <!-- Over -->
    <div class="over" data-opacity="0.4" data-color="#000"></div>
    <div class="into_back image_bck"  data-image="http://placehold.it/1920x1100/"></div>


    <div class="inside_intro_block">
      <div class="ins_int_item white_txt bordered_wht_border text-center">
        <div class="simple_block simple_block_sml">
          <h4>Register Here</h4>
          <%= form_for(@account) do |f| %>
            <%= f.fields_for @user do |u| %>
              <%= u.text_field :username, class: 'form-control form-opacity', placeholder: 'Username' %>
            <% end %>
            <%= f.password_field :password, class: 'form-control form-opacity', placeholder: 'Password' %>
            <%= f.password_field :password_confirmation, class: 'form-control form-opacity', placeholder: 'Password Confirmation' %>
            <%= f.fields_for @user do |u| %>
              <%= u.text_field :first_name, class: 'form-control form-opacity', placeholder: 'First Name' %>
              <%= u.text_field :last_name, class: 'form-control form-opacity', placeholder: 'Last Name' %>
              <%= u.email_field :email, class: 'form-control form-opacity', placeholder: 'Email (only for change updates)' %>
              <%= u.select :gender, options_for_select(['Male', 'Female']), {prompt: 'Gender'},  {class: 'form-control form-opacity'} %>
              <%= label_tag :height %>
              <div class="form-inline">
                <%= number_field_tag 'height[ft]',nil, class: 'form-control form-opacity', placeholder: 'Feet' %>
                <%= number_field_tag 'height[in]',nil, class: 'form-control form-opacity', placeholder: 'Inches' %>
              </div>
              <%= u.number_field :weight, class: 'form-control form-opacity', placeholder: 'Weight in Lbs' %>
            <% end %>
            <%= f.submit %>
          <% end %>
        </div>
      </div>
    </div>

  </div>

</section>
